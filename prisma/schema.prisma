// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String          @unique
  emailVerified  DateTime
  image          String?
  hashedPassword String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  recentSearches RecentSearches?
}

model Track {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique
  image        String
  releaseDate  String
  currentRank  Int
  previousRank Int
  artistsIds   String[] @db.ObjectId
  artists      Artist[] @relation(fields: [artistsIds], references: [id])
  duration     Int
  genre        String
}

model Artist {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String   @unique
  tracksIds    String[] @db.ObjectId
  tracks       Track[]  @relation(fields: [tracksIds], references: [id])
  image        String
  currentRank  Int
  previousRank Int
}

model SearchType {
  id               String          @id @default(auto()) @map("_id") @db.ObjectId
  recentSearches   RecentSearches? @relation(fields: [recentSearchesId], references: [id])
  recentSearchesId String?         @db.ObjectId
  type             String
  image            String
  name             String
}

model RecentSearches {
  id       String       @id @default(auto()) @map("_id") @db.ObjectId
  user     User         @relation(fields: [userId], references: [id])
  userId   String       @unique @db.ObjectId
  searches SearchType[]
}
